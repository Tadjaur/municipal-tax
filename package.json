{
  "name": "municipal-tax",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter web dev",
    "dev:functions": "bun --filter functions dev",
    "build": "bun run build:web && bun run build:functions",
    "build:web": "bun --filter web build",
    "build:functions": "bun --filter functions build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "firebase:emulators": "firebase emulators:start",
    "deploy:web": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
